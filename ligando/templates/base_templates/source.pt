<html metal:use-macro="load: ../base_layout.pt">
<html lang="${request.locale_name}">
<head>

</head>

<body>
<metal:block fill-slot="content">
    <div class="main_wrapper">
        <div class="wrapper">
            <h1 style="text-align: center">${source}</h1>

            <div style="align-content: center;margin-left: auto; margin-right: auto;">
                <h3>Basic Statistics</h3>
                <table class="info_table" width="25%">
                    <tr>
                        <td>Peptides:</td>
                        <td id="pep_stat"></td>
                    </tr>
                    <tr class="alt">
                        <td>Spectra:</td>
                        <td id="spec_stat"></td>
                    </tr>
                    <tr>
                        <td>Proteins:</td>
                        <td id="prot_stat"></td>
                    </tr>
                </table>
                <br>

                <h3>Source Information</h3>
                <table class="info_table" width="50%">
                    <tr>
                        <td width="50%">Histology:</td>
                        <td id="histology"></td>
                    </tr>
                    <tr class="alt">
                        <td>Dignity:</td>
                        <td id="dignity"></td>
                    </tr>
                    <tr>
                        <td>Organ:</td>
                        <td id="organ"></td>
                    </tr>
                    <tr class="alt">
                        <td>Organism:</td>
                        <td id="organism"></td>
                    </tr>
                    <tr>
                        <td>Celltype:</td>
                        <td id="celltype"></td>
                    </tr>
                    <tr class="alt">
                        <td>Location:</td>
                        <td id="location"></td>
                    </tr>
                    <tr>
                        <td>Metastatis:</td>
                        <td id="metastatis"></td>
                    </tr>
                    <tr class="alt">
                        <td>HLA-Typing:</td>
                        <td id="typing"></td>
                    </tr>
                    <tr>
                        <td>Responsible Person:</td>
                        <td id="person"></td>
                    </tr>
                    <tr class="alt">
                        <td>Treatment:</td>
                        <td id="treatment"></td>
                    </tr>
                    <tr>
                        <td>Comment:</td>
                        <td id="comment"></td>
                    </tr>
                </table>

            </div>
        </div>
        <br>

        <table id="example" class="info_table" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>MS Run</th>
            </tr>
            </thead>
        </table>
    </div>

    <script>


        $(document).ready(function () {


            // extract alleles and link them
            var digits = 2;
            var alleles = ${metadata}[0]["hla_typing"].split(",");
            var allele_string = "";
            loop1:
                    for (var i = 0; i < alleles.length; i++) {
                        var a = alleles[i].trim();
                        for (var j = 0; j < alleles.length; j++) {
                            var b = alleles[j].trim();
                            if (b.indexOf(a) > -1 && i != j) {
                                continue loop1;
                            }
                        }

                        allele_string = allele_string + "<a class='nostylelink'  href= '/hla/" + a + "'>" + a + "</a>, ";
                        // Get the number of digits in typing
                        try {
                            digits = (a.split("*")[1].split(":")).length * 2;
                        } catch (err) {
                            digits = 2;
                        }
                    }
            // error check for digits
            if (digits != 2 && digits != 4) {
                digits = 2;
            }
            // Setting the statistics
            document.getElementById("pep_stat").innerHTML = "<a title='Show all Peptides'  class='nostylelink' href='javascript:post(\x22../peptide_query\x22, {patient_id: \x22${source}\x22, grouping:\x22source\x22 , digits:\x22" + digits + "\x22}," + ${statistic}[0]["count_pep"] + " )'> " + ${statistic}[0]["count_pep"] + "</a>";
            // TODO: create spectrum hit query
            document.getElementById("spec_stat").innerHTML = ${statistic}[0]["count_hits"];
            document.getElementById("prot_stat").innerHTML = ${statistic}[0]["count_prot"];
            document.getElementById("typing").innerHTML = allele_string.slice(0, -2);
            document.getElementById("histology").innerHTML = get_separate_links("histology", ${metadata}[0]["histology"]);
            document.getElementById("organ").innerHTML = get_separate_links("organ", ${metadata}[0]["organ"]);
            document.getElementById("comment").innerHTML = ${metadata}[0]["comment"];
            document.getElementById("organism").innerHTML = get_separate_links("organism", ${metadata}[0]["organism"]);
            document.getElementById("dignity").innerHTML = get_separate_links("dignity", ${metadata}[0]["dignity"]);
            // Celltype
            document.getElementById("celltype").innerHTML = get_separate_links("celltype", ${metadata}[0]["celltype"]);
            // Location
            document.getElementById("location").innerHTML = get_separate_links("location", ${metadata}[0]["location"]);
            // Write Yes or No instead 0 and 1
            if (${metadata}[0]["metastatis"] == 0) {
                document.getElementById("metastatis").innerHTML = "No"
            } else {
                document.getElementById("metastatis").innerHTML = "Yes"
            }
            // Person
            document.getElementById("person").innerHTML = get_separate_links("person", ${metadata}[0]["person"]);
            // Treatment
            document.getElementById("treatment").innerHTML = get_separate_links("treatment", ${metadata}[0]["treatment"]);
        });


        $(document).ready(function () {
// create dataTable
            $('#example').dataTable({
                "paging": false,
                "info": false,
                searching: false,
                data: ${runs},
                columns: [
                    { data: "filename",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/msrun/" + row["ms_run_id"] + "'>" + data + "</a>";
                        }
                    }
                ]
            });
        });

    </script>

</metal:block>

</body>

</html>
</html>